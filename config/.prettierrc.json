{
    "tabWidth": 4,
    "printWidth": 100,
    "trailingComma": "es5",
    "htmlWhitespaceSensitivity": "strict",
    "overrides": [
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.ejs",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": "*.html",
            "options": {
                "embeddedLanguageFormatting": "off"
            }
        }
    ],
    "plugins": ["prettier-plugin-ejs"]
}
